Version: '3.8'

services:
  httpd:
    image: httpd:latest 
    restart: always
    ports:
      -80:80
    volumes:
      - ./e2t_aulas:/usr/local/apache2/htdocs

  mysql:
    image: mysql: latest
    restart: always
    environment:
      MYSQL ROOT PASSWORD: ‘r00tpassw’
      MYSQL DATABASE: ‘e2t_aulas’
      MYSQL_USER: ‘e2t_user’
      MYSQL PASSWORD: ‘123’
    volumes:
      -./data/mysql:/var/lib/mysql

  nginx:
    image: nginx: latest
    restart: always
    ports:
      - 443:443 
    volumes:
      -/mi_configuracion/nginx.conf:/etc/nginx/nginx.config:ro
